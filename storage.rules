rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Food images - admin only can upload
    match /food-images/{allPaths=**} {
      allow read: if true; // Anyone can read/view images
      allow write: if isAdmin(); // Only admins can upload/modify/delete
    }
    
    // General uploads - authenticated users
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // User profile images
    match /user-images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
